root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
# show rules in the editor (and do not wrap automatically)
rulers = 80, 100, 120

[*.{cpp,h,hpp,cu}]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
